{
  "family": "book-boy-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::096435303842:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "book-boy",
      "image": "096435303842.dkr.ecr.us-east-2.amazonaws.com/book_boy:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DB_HOST",
          "value": "bookboy-db.cj0qm6m6ened.us-east-2.rds.amazonaws.com"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_USER",
          "value": "postgres"
        },
        {
          "name": "DB_NAME",
          "value": "postgres"
        },
        {
          "name": "DB_SSLMODE",
          "value": "require"
        },
        {
          "name": "REDIS_URL",
          "value": "your-elasticache-endpoint:6379"
        },
        {
          "name": "RABBITMQ_URL",
          "value": "amqp://admin:password@your-amazonmq-endpoint:5671"
        },
        {
          "name": "BOOK_METADATA_SERVICE_URL",
          "value": "http://localhost:8000"
        }
      ],
      "secrets": [
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:096435303842:secret:book_boy/jwt-gBiBUD:jwt-secret::"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:us-east-2:096435303842:secret:book_boy/db-v7EmQK:password::"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/book_boy",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "book-metadata-service",
      "image": "096435303842.dkr.ecr.us-east-2.amazonaws.com/book-metadata-service:latest",
      "essential": false,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/book_boy_metadata_service",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
